# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/whatsapp_saas?schema=public"

# ===========================================
# REDIS (for queues & caching)
# ===========================================
REDIS_URL="redis://localhost:6379"

# Optional: Disable Redis/Queues for development
ENABLE_REDIS=false
ENABLE_QUEUES=false

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="30d"

# ===========================================
# WHATSAPP BUSINESS API (META)
# ===========================================
# Global webhook verify token (single endpoint for all tenants)
WEBHOOK_VERIFY_TOKEN="your-webhook-verify-token-from-meta"

# Meta Graph API version
META_API_VERSION="v21.0"
META_API_BASE_URL="https://graph.facebook.com"

# ===========================================
# SERVER
# ===========================================
PORT=3000
NODE_ENV="development"

# ===========================================
# FILE UPLOADS
# ===========================================
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760 # 10MB in bytes

# ===========================================
# ENCRYPTION (for WABA tokens)
# ===========================================
# In production, use KMS or Vault
ENCRYPTION_KEY="your-32-character-encryption-key!!"

# ===========================================
# RATE LIMITING
# ===========================================
# Global API rate limits
RATE_LIMIT_WINDOW_MS=60000 # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# OBSERVABILITY (Optional)
# ===========================================
SENTRY_DSN=""
LOG_LEVEL="info" # debug, info, warn, error

# ===========================================
# FRONTEND URL (for CORS)
# ===========================================
FRONTEND_URL="http://localhost:5173"

PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=24205249225834389

# Webhook Configuration
# Set this to any secure random string for webhook verification
WEBHOOK_VERIFY_TOKEN=16be837f-4ae8-468f-a6cd-8347021b1202

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024


# Auto Reply Settings
AUTO_REPLY_ENABLED=true
AUTO_REPLY_MESSAGE=Thanks for your message! We'll get back to you soon.

